  body
    .topbar
      .topbody
        a.title SMDA
        ul.toplist
          li
            a.name 未来趋势
          li
            a.name 历史数据

        ul(class=["nav","navbar-nav","navbar-right","user-nav"])
          li(class=["dropdown","profile_menu"])
            a(href="#",class="dropdown-toggle",data-toggle="dropdown")
              span.name Jane Smith
            ul.dropdown-menu
              li
                a 我的账号
              li
                a 联系我们
              li
                a 退出登录

    .container1
      ul.nav_tabs
        li(id='tag1',class='active') 销售趋势
        li(id='tag2',class='normal') 类目趋势
        li(id='tag3',class='normal',onclick='cdistribution()') 类目分布
        li(id='tag4',class='normal',onclick='bdistribution()') 品牌分布
      div(class='canvas_contain',id='barCanvas',style='display:inline-block')
        canvas#myBarChart
      div(class='canvas_contain2',id='Dchart',style='display:inline-block')
        #svg_contain
      div(class='canvas_contain',id='svgChart',style='display:none')
        form
          label
            input(type="radio", name="mode", value="grouped")
            | Grouped
          label
            input(type="radio", name="mode", value="stacked", checked)
            | Stacked
        .twoChart
          svg(width="800" height="400")
      div(class='canvas_contain2',id='PieCanvas',style='display:none')
        .twoChart
          .twoChart1
            canvas#myPieChart
          .twoChart2
            .row
              .col-md-12
                .block-flat
                  .header
                    h3 类目排行

                  .content
                    .table-responsive
                      table(class=['table', 'table-bordered'],id='datatable3')
                        thead
                          tr
                            th 类目
                            th 销售额
                            th 占比
                        tbody
                          tr(class=["odd", "gradeX"])
                            td Trident
                            td Internet Explorer 4.0
                            td Win 95+

                          tr(class=['even', 'gradeC'])
                            td Trident
                            td Internet Explorer 5.0
                            td Win 95+

                          tr(class=["odd", "gradeA"])
                            td Trident</td>
                            td Internet Explorer 5.5</td>
                            td Win 95+</td>





